@model PizzeriaWebApp.Models.ViewModels.OrderFormModel

<form asp-action="MakeAnOrder" method="post">
    @Html.AntiForgeryToken()
    <div>
        <label>Address</label>
        <input asp-for="Address" type="text"/>
    </div>
    <div>
        <label>Notes</label>
        <input asp-for="Notes" type="text" />
    </div>
    <div class="form-check">
        <input class="form-check-input" name="Username" value="@User.Identity.Name" type="hidden"/>
    </div>
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Products.Count; i++)
            {
                <tr>
                    <td>@Model.Products[i].ProductName</td>
                    <td>@Model.Products[i].Price</td>
                    <td><input asp-for="Products[i].Quantity" type="number"/></td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit">Submit Order</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
